<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 mt-3">
      <div class="row">
        <div class="col-md-3 col-sm-4">
            <%= image_tag @user.avatar, class: "img-fluid rounded-circle mx-auto" %>
        </div>
        <div class="col-md-9 col-sm-8">
          <h2><%= @user.name %></h2>
          <p><strong><%= @user.email %></strong></p>
          <div><%= simple_format @user.intro %></div>
          <% if @user.email == current_user.email %>
            <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-primary" %>
          <% end %>
        </div>
        <div class="clearfix"></div>
        <br>
      </div>
    </div>
  </div>
  <div class="card mt-4">
    <div class="card-header">
      <h3><strong><%= @commented_restaurants.count %></strong> commented restaurants</h3>
    </div>
    <div class="card-body">
      <% @commented_restaurants.each do |restaurant| %>
        <%= link_to restaurant_path(restaurant) do %>
        <div class="my-restaurant">
          <div>
            <%= image_tag restaurant.image, class: "img-fluid rounded mx-auto" %>
          </div>
          <h5><%= restaurant.name %></h5>
        </div>
        <% end %>

      <% end %>
    </div>
  </div>
</div>