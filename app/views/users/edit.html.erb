<div class="container">
  <div class="row">

    <div class="col-md-6 offset-md-3">

      <h3>Edit Profile</h3>

      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :intro, "Profile" %>
          <%= f.text_area :intro, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update", class: "btn btn-primary" %>
          <%= link_to "Cancel", user_path(@user), class: "btn btn-outline-dark" %>
        </div>
      <% end %>

    </div>

  </div>
</div>