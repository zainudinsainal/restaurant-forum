<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @restaurant.name %></h1>
      <p>[<%= @restaurant.category.name %>]</p>
    </div>

    <div class="col-md-4">
      <%= image_tag @restaurant.image, class: "img-fluid rounded mx-auto d-block" %>
      <br>
      <div class="card">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Opening Hour:</strong> <%= @restaurant.opening_hours %></li>
          <li class="list-group-item">Tel:</strong> <%= @restaurant.tel %></li>
          <li class="list-group-item">Address:</strong> <%= @restaurant.address %></li>
        </ul>
      </div>
    </div>
    <div class="col-md-8">
      <%= simple_format @restaurant.description %>
    </div>

    <div class="clearfix"></div>

    <hr>

  </div>
</div>

<div class="container">
  <div class="row">
   <%= form_for [@restaurant, @comment] do |f| %>
    <div class="form-group">
      <%= f.text_area :content, placeholder: "leave a message", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit class: "btn btn-primary" %>
      <%= f.button "Cancel", type: :reset, class: "btn btn-outline-dark" %>
    </div>
  <% end %>
  </div>
</div>

